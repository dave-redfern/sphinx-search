{
    "name": "scorpio/sphinx-search",
    "type": "library",
    "description": "A set of classes wrapping the SphinxClient extension in a object-oriented way.",
    "keywords": [
        "scorpio",
        "sphinx",
        "sphinx search"
    ],
    "license": "BSD",
    "authors": [
        {
            "name": "Dave Redfern",
            "email": "info@somnambulist.tech"
        }
    ],
    "autoload": {
        "psr-4": {
            "Scorpio\\SphinxSearch\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Scorpio\\SphinxSearch\\Tests\\": "tests/"
        },
        "classmap": [
            "tests/_support"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "require": {
        "php": ">=5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "~6.3",
        "symfony/var-dumper": "3.3.*"
    },
    "suggest": {
        "ext-sphinx": "*",
        "gigablah/sphinxphp": "2.0.*"
    }
}
