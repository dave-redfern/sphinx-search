{
  "name": "scorpio/sphinx-search",
  "type": "library",
  "description": "A set of classes wrapping the SphinxClient extension in a object-oriented way.",
  "keywords": [ "scorpio", "sphinx", "sphinx search" ],
  "license": "BSD",
  "authors": [
    {
      "name": "Dave Redfern",
      "email": "dave@scorpioframework.com",
      "homepage": "http://www.madagasgar.com"
    }
  ],
  "autoload": {
    "psr-0": {
      "": "src/"
    }
  },
  "config": {
    "bin-dir": "bin"
  },
  "require": {
    "php": ">=5.5.0"
  },
  "suggest": {
    "ext-sphinx": "*",
    "gigablah/sphinxphp": "2.0.*"
  },
  "require-dev": {
    "codeception/codeception": "2.1.*"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "0.2-dev"
    }
  }
}
